#:kivy 1.0.9

<ChannelLabels>:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "10"
        Label:
            text: "5"
        Label:
            text: "0"
        Label:
            text: "5"
        Label:
            text: "10"
        Label:
            text: "20"
        Label:
            text: "30"
        Label:
            text: "50"
        Label:
            text: "âˆž"
    Label:
        text: self.parent.top_text
        canvas.before:
            PushMatrix
            Rotate:
                angle: 90
                origin: self.center
        canvas.after:
            PopMatrix
    Label:
        text: self.parent.mid_text
        canvas.before:
            PushMatrix
            Rotate:
                angle: 90
                origin: self.center
        canvas.after:
            PopMatrix

<ChannelData>:
    canvas.before:
        Color:
            rgba: self.in_color
        Rectangle:
            pos: self.x + self.width/3, self.y
            size: self.width/3*0.9, self.height*self.in_percent
        Color:
            rgba: self.out_color
        Rectangle:
            pos: self.x + self.width*2/3, self.y
            size: self.width/3*0.9, self.height*self.out_percent
    orientation: "horizontal"
    Button:
        background_color: 0,0,0,0

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<XRemGUI>:
    ball: pong_ball
    channels: channels
    channel_labels: channel_labels
    bus_labels: bus_labels
    second: second

    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height
        GridLayout:
            id: channels
            cols: 8
        BoxLayout:
            orientation: "vertical"
            id: buttons
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "foo"
                Button:
                    text: "bar"
            BoxLayout:
                orientation: "horizontal"
                id: second

    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height
        GridLayout:
            id: channel_labels
            cols: 8
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "foo"
                Button:
                    text: "bar"
            BoxLayout:
                orientation: "horizontal"
                id: bus_labels

    PongBall:
        id: pong_ball
        center: self.parent.center