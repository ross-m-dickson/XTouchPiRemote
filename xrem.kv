#:kivy 1.0.9

<GraphLabel>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.width, self.height*self.percent

<GraphBox>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.width, self.height*self.percent
    orientation: "vertical"
    Label:
        id: top
        text: root.top_text
    Label:
        id: mid
        text: root.mid_text
    Label:
        id: bot
        text: root.bot_text


<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<XRemGUI>:
    ball: pong_ball
    channels: channels
    second: second

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    BoxLayout:
        orientation: "horizontal"
        size: root.width, root.height
        GridLayout:
            id: channels
            cols: 8
#            spacing: 10
#            padding: 10
        BoxLayout:
            orientation: "vertical"
            id: buttons
            Button:
                text: "foo"
            Button:
                text: "bar"
            BoxLayout:
                orientation: "horizontal"
                id: second

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

    PongBall:
        id: pong_ball
        center: self.parent.center